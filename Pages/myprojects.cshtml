@page
@model Econass.Pages.myprojectsModel
@{
    ViewData["Title"] = "My Projects - Hannah Jane Econas";
}

<div class="projects-wrapper">
    <div class="projects-nav">
        <div class="nav-container">
            <div class="hero-logo">
                <img src="images/econas-logo.png" alt="Econas Studio Logo" class="logo-image" />
                <span class="logo-text">Econas Studio</span>
            </div>
            <ul class="hero-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/myprojects" class="active">Projects</a></li>
                <li><a href="/aboutme">About Me</a></li>
            </ul>
            <a href="/contactoptions#contact" class="btn-hero-nav">Contact Me</a>
        </div>
    </div>

    <div class="projects-main">
        <!-- Hero Section -->
        <div class="projects-hero">
            <div class="projects-hero-container">
                <span class="projects-label">💼 My Work</span>
                <h1 class="projects-hero-title">
                    Featured <span>Projects</span>
                </h1>
                <p class="projects-hero-subtitle">
                    A curated collection of design work showcasing my approach to creating
                    intuitive, beautiful digital experiences.
                </p>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="projects-section">
            <div class="projects-container">

                <!-- Project 1: Student Information System -->
                <div class="project-card featured">
                    <div class="project-image">
                        <img src="images/studentinformation.png" alt="Student Information System" />
                        <div class="project-overlay">
                            <span class="project-tag">UI/UX Design</span>
                            <span class="project-tag">Web App</span>
                        </div>
                    </div>
                    <div class="project-content">
                        <div class="project-header">
                            <h2 class="project-title">Student Information System</h2>
                            <span class="project-badge">Featured</span>
                        </div>
                        <p class="project-description">
                            A comprehensive web application designed to manage student records, course enrollments,
                            and academic information. The interface prioritizes ease of use for administrators,
                            teachers, and students with role-based dashboards and clean data visualization.
                        </p>
                        <div class="project-features">
                            <h4>Key Features:</h4>
                            <ul>
                                <li>Student enrollment and records management</li>
                                <li>Course scheduling and grade tracking</li>
                                <li>Role-based access control</li>
                                <li>Responsive dashboard interface</li>
                            </ul>
                        </div>
                        <div class="project-tech">
                          <span class="tech-badge">Figma</span>
                            <span class="tech-badge">UI Design</span>
                            <span class="tech-badge">Design System</span>
                            <span class="tech-badge">Prototyping</span>
                        </div>
                        <div class="project-links">
                            <a href="https://www.figma.com/design/L7m9lF4spu25gDWWCPciZr/Student-Grading-System" target="_blank" class="btn-project primary">View on Figma</a>
                        </div>
                    </div>
                </div>

                <!-- Project 2: E-Commerce Figma Design -->
                <div class="project-card">
                    <div class="project-image">
                        <img src="images/quick_eat.png" alt="E-Commerce Figma Design" />
                        <div class="project-overlay">
                            <span class="project-tag">Figma</span>
                            <span class="project-tag">UI Design</span>
                        </div>
                    </div>
                    <div class="project-content">
                        <div class="project-header">
                            <h2 class="project-title">E-Commerce Platform Design</h2>
                        </div>
                        <p class="project-description">
                            A modern e-commerce interface designed in Figma focusing on user-friendly product browsing,
                            seamless checkout flow, and mobile-first approach. The design system includes reusable
                            components for consistent branding across all pages.
                        </p>
                        <div class="project-features">
                            <h4>Key Features:</h4>
                            <ul>
                                <li>Product catalog with filtering and search</li>
                                <li>Shopping cart and checkout flow</li>
                                <li>User account and order history</li>
                                <li>Mobile-responsive design system</li>
                            </ul>
                        </div>
                        <div class="project-tech">
                            <span class="tech-badge">Figma</span>
                            <span class="tech-badge">UI Design</span>
                            <span class="tech-badge">Design System</span>
                            <span class="tech-badge">Prototyping</span>
                        </div>
                        <div class="project-links">
                            <a href="https://www.figma.com/design/1RCWFLT6243PHtlifLu8WN/Quick-Eat?node-id=0-1&p=f&t=8CptRWE8SB0xQhUc-0" target="_blank" class="btn-project primary">View on Figma</a>
                        </div>
                    </div>
                </div>

                <!-- Project 3: LiteClerk Webpage UI -->
                <div class="project-card">
                    <div class="project-image">
                        <img src="images/liteclerk.png" alt="LiteClerk Webpage UI" />
                        <div class="project-overlay">
                            <span class="project-tag">Web Design</span>
                            <span class="project-tag">Landing Page</span>
                        </div>
                    </div>
                    <div class="project-content">
                        <div class="project-header">
                            <h2 class="project-title">Liteclerk Webpage UI</h2>
                        </div>
                        <p class="project-description">
                            A clean, professional landing page designed for LiteClerk, a lightweight business
                            management tool. The design emphasizes clarity and conversion with strategic use
                            of whitespace, clear CTAs, and benefit-focused content sections.
                        </p>
                        <div class="project-features">
                            <h4>Key Features:</h4>
                            <ul>
                                <li>Modern hero section with clear value proposition</li>
                                <li>Feature showcase with icons and descriptions</li>
                                <li>Testimonials and social proof</li>
                                <li>Call-to-action optimization</li>
                            </ul>
                        </div>
                        <div class="project-tech">                  
                            <span class="tech-badge">Responsive</span>
                            <span class="tech-badge">Landing Page</span>
                        </div>
                        <div class="project-links">
                            <a href="https://www.figma.com/design/5lr81p6E1k3gwnv1JE7QS8/Liteclerk?node-id=0-1&p=f&t=rPgoGS3pjBc033zp-0" target="_blank" class="btn-project primary">View on Figma</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- CTA Section -->
        <div class="projects-cta">
            <div class="projects-cta-container">
                <div class="cta-icon">💡</div>
                <h2 class="cta-title">Have a Project in Mind?</h2>
                <p class="cta-text">
                    I'm always excited to take on new challenges and bring creative ideas to life.
                    Let's discuss how we can work together!
                </p>
                <a href="/contactoptions" class="btn btn-hero-primary">Start a Conversation</a>
            </div>
        </div>
    </div>
</div>
